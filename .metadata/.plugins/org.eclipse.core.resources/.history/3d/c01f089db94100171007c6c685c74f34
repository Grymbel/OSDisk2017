package application;

import java.io.File;
import java.io.FileNotFoundException;
import java.nio.file.FileSystems;
import java.nio.file.Path;
import java.util.ArrayList;
import java.util.Scanner;

public class MTCDAO {
	public ArrayList<String> out1 = new ArrayList<String>();
	public ArrayList<String> out2 = new ArrayList<String>();
	public ArrayList<String> out3 = new ArrayList<String>();
	Scanner in;
	String recordBuffer;
	private static final String WORDS = "shitStorage.txt";
	private File dataFile;

	public MTCDAO() {
		Path dPath = FileSystems.getDefault().getPath("C:/Users/Matt/workspace/workspace/MTC/src/resources/sdata",WORDS);
		dataFile = new File(dPath.toString());
	}

	public void loadLists() {

		String[] givenThree = new String[3];

		try {
			in = new Scanner(dataFile);
			while (in.hasNextLine()) {
				recordBuffer = in.nextLine();
				givenThree = recordBuffer.split(";");
				out1.add(givenThree[0]);
				out2.add(givenThree[1]);
				out3.add(givenThree[2]);
			}
		} catch (FileNotFoundException e) {
			System.out.println("No record found!");
			e.printStackTrace();
		}
	}
}
